<launch>
    <arg name="name" default="micras_node"/>

    <set_env name="GZ_SIM_RESOURCE_PATH" value="$(find-pkg-share micras_simulation)/gazebo"/>
    <set_env name="IGN_GUI_PLUGIN_PATH" value="$(find-pkg-share micras_simulation)/micras_plugin"/>

    <group>
        <push-ros-namespace namespace="micras"/>

        <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
            <arg name="gz_args" value="$(find-pkg-share micras_simulation)/gazebo/worlds/maze.sdf
                                       --gui-config $(find-pkg-share micras_simulation)/gazebo/gui.config"/>
        </include>

        <node name="ros_gz_bridge" pkg="ros_gz_bridge" exec="parameter_bridge" output="screen">
            <param name="config_file" value="$(find-pkg-share micras_simulation)/launch/ros_gz_bridge.yaml"/>
        </node>

        <node name="micras_node" pkg="micras_simulation" exec="$(var name)" output="screen"/>
    </group>
</launch>
