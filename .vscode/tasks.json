{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "ROS Launch Micras Simulation",
            "type": "ros",
            "command": "ros2 launch micras_simulation micras.launch.xml",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "\\[INFO\\] \\[launch\\]",
                        "endsPattern": "\\[gdbserver-\\d+\\] Listening on port"
                    }
                }
            ]
        }
    ]
}
