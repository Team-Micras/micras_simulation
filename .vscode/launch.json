{
    // For information on how to use the debug with ROS see
    // https://github.com/ms-iot/vscode-ros/blob/master/doc/debug-support.md
    "version": "0.2.0",
    "configurations": [
        {
            // Note: Install GDB to use this configuration
            "name": "ROS: Attach",
            "type": "ros",
            "request": "attach"
        },
        {
            "name": "ROS: Launch",
            "type": "ros",
            "request": "launch",
            "target": "${workspaceFolder}/launch/micras.launch.xml",
            "arguments": ["test_name:=${input:args}"]
        }
    ],
    "inputs": [
        {
            "id": "args",
            "type":"promptString",
            "description": "Node Name",
            "default": "micras_node"
        }
    ]
}
